.popup
  position fixed
  top 0
  bottom 0
  right 0
  left 0
  background rgba(0, 0, 0, 0.7)
  z-index 1000
  display none
  &__window
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    max-width 90%
    border-radius 10px
  &__title
    margin-bottom 24px
  &__close
    position absolute
    right 16px
    top 16px
    cursor pointer
  &.active
    display block
