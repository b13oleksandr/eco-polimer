.section-carousel
  &__data
    position absolute
    top 148px
    right 0
    @media screen and (max-width 1199px)
      //top 100px
      right initial
      left 16px
    //@media screen and (max-width 767px)
    //  top 20px
  &__content
    position relative
  &__desc
    font-weight 600
    font-size 17px
    line-height 21px
    margin-bottom 16px
  &__title
    max-width 754px
    margin-bottom 56px
    @media screen and (max-width 1199px)
      margin-bottom 32px
  &__nav
    position absolute
    right 0
    bottom -130px
    @media screen and (max-width 767px)
      display none
  &__img
    height 463px
    object-fit cover
  &__img-wrap
    position relative
    display inline-block
    &::before
      content ''
      display block
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background rgba(0, 0, 0, 0.25)
