.accordion
  overflow hidden
  &__header
    display flex
    align-items center
    padding 22px 64px 22px 46px
    font-weight 600
    font-size 17px
    line-height 21px
    position relative
    cursor pointer
    &::after
      content ''
      display inline-block
      height 24px
      width 24px
      position absolute
      right 24px
      background-image url("../statics/images/chevron.svg")
      top 50%
      margin-top -12px
      transition .3s
  /*&__content
    overflow hidden*/
  &__content-inner
    padding 0 87px 22px 53px
    color $color-grey
  &:not([data-collapsed])
    .accordion__header
      &::after
        transform rotate(180deg)
